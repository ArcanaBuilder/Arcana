COMPILER = gcc
FLAGS    = -Wall -pedantic
TARGET   = app

@builtin
MODE     = Release

@precompiler
task Create_Folders(folders)
{
    mkdir build
}

@postcompiler
task Say_Something(msg)
{
    mkdir build
}

@builtin
task Clean(folder) {}

@profile
task Build(sources) 
{
    COMPILER FLAGS sources -o TARGET
}

task Install() 
{
    mv TARGET /usr/local/bin
}


Say_Something('ciao');