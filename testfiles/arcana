COMPILER = g++
FLAGS    = -std=c++17 -Os -Wall -Wextra -DDEBUG
TARGET   = app
MODE     = Release

BUILD    = Build
SOURCE   = Source/**

@folder
@file
task Clean(BUILD);

task Install(TARGET);


@profile
task Build() {
    COMPILER FLAGS SOURCE -o TARGET
}

@precompiler
task Create_Folders()
{
    mkdir BUILD
    mkdir test
}

@postcompiler
task Say_Something(msg)
{
    echo msg
}

Say_Something('All Done!');