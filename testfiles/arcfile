#!/usr/bin/arcana

import Defaults.arc;


###########################
# BUILT-IN TASKS
###########################

@multithread
@public
task Clean() 
{ 
    rm -rf {BUILDDIR}
}

@public
@always
@dependecy Build Clean
task Install()
{
    cp {TARGET} /usr/bin/  
}

###########################
# OVERRIDED BUILT-IN TASKS
###########################

@public
@dependecy Compile Link
task Build() {}


task Compile()
{
    {COMPILER} {FLAGS} {SOURCES} -c {OBJECTS}
}


task Link()
{
    {COMPILER} {FLAGS} {OBJECTS} -o {TARGET}
}



###########################
# PRE BUILD TASKS
###########################

using order precompiler Message MakeFolders;

@precompiler
task MakeFolders() 
{
    cd SRCDIR
    find . -type d -exec mkdir -p "../{BUILDDIR}"/{} \;
}


@profile Debug
@precompiler
task Message() 
{
    echo 'Compiling {TARGET} in Debug Mode'
}


@profile Release
@precompiler
task Message() 
{
    echo 'Compiling {TARGET} in Release Mode'
}



###########################
# POST BUILD TASKS
###########################

@private
@callable
@postcompiler
task Say_Something(msg) { echo msg }

###########################
# POST BUILD TASKS CALL
###########################

Say_Something('All Done!');